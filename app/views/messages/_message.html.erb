<li class="media">
  <div class="media-body">
    <span class="pull-right">
      <%= link_to "Delete", message_path(message), method: :delete, data: { confirm: "Are you sure you want to delete this message?"}, class: "btn btn-danger" %>
    </span>
    <p>
      <%= simple_format message.body %>
      <small class="text-muted"><%= time_ago_in_words message.created_at %></small>
    </p>
  </div>
</li>
<hr>
