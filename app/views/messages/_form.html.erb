<%= form_for(message) do |f| %>

  <div class="form-group">
    <%= f.text_area :body, :class => 'form-control', :placeholder => 'Enter message...', rows: "3" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :class => 'btn btn-primary btn-sm pull-right' %>
  </div>

  <%= flash_messages %>

<% end %>
